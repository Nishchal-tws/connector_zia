{
  "installCommand": "git submodule update --init --recursive --depth 1",
  "buildCommand": "cd frontend/zia && npm ci && npm run build",
  "outputDirectory": "frontend/zia/build",
  "framework": null,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.py"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}

